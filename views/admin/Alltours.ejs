                                <a class="pages-link" href="/admin/alltour?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
            
                        <!-- Next Button -->
                        <% if (currentPage < totalPages) { %>
                            <li>
                                <a class="pages-link" href="/admin/alltour?page=<%= currentPage + 1 %>">
                                    <i class="icon--1"></i> <!-- Replace with your right-arrow icon -->
                                </a>
                            </li>
                        <% } %>
